<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmbc.android.service_assistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
      <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    

   
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        
       	>
        <activity
            android:name="com.cmbc.android.service_assistant.activity.LaunchActivity"
            android:label="@string/app_name"
            android:theme="@style/mystyle" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 登陆界面 -->
        <activity android:name="com.cmbc.android.service_assistant.activity.LoginActivity"
            android:theme="@style/mystyle"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            >
            <intent-filter >
                <action android:name="com.cmbc.android.develop.assistant_of_minsheng" /><!-- 动作标识符 -->
                <category  android:name="android.intent.category.DEFAULT"/><!-- 数据类型，或者不设置也行，一般为默认-->
                <data android:mimeType="application/assistant"/><!-- 数据大致类型 -->
                <data android:scheme="minsheng:assistant" /><!-- 细则 -->
            </intent-filter>
            
        </activity>
        
        <!-- 程序主界面 -->
         <activity android:screenOrientation="portrait" android:name="com.cmbc.android.service_assistant.activity.MainActivity"></activity>
       <activity
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.SearchDeliveryOrderActivity"></activity>
       
      <activity
          android:theme="@style/mystyle"
            android:name="com.example.qr_codescan.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
       
      
       <activity
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.DeliveryOrderInfoActivity"></activity>
       
        <activity
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.OrderSearchActivity"></activity>
        
        <activity
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.OrderFilterActivity"></activity>
        
         <activity
           android:theme="@style/AppBaseTheme" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.TimePickerActivity"></activity>
         
         <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.FilterActivity"></activity>
         
          <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.OrderDetailActivity"></activity>
          
          <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.PurchaseSearchActivity"></activity>
          
           <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.PurchaseFilterActivity"></activity>
          
             <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.SupplierSearchActivity"></activity>
             
              <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.PurchaseDetailInfoActivity"></activity>
              
                <activity 
           android:theme="@style/mystyle" 
           android:screenOrientation="portrait" 
           android:name="com.cmbc.android.service_assistant.activity.CountActivity"></activity>
                
                    
             
           
    </application>
    
    
    

</manifest>