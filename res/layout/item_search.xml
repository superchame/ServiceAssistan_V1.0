<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   android:paddingBottom="20dp"
   android:background="#F5F5F5">
    
    <LinearLayout 
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/your_item_border"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/item_search_img"
            android:layout_gravity="center_vertical"
        	android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_order_img"/>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/your_item_inside_border2"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            
            <TextView 
                android:id="@+id/item_search_tv_orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M1508023250_13"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            
            <TextView 
                android:id="@+id/item_search_tv_ordertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textSize="12sp"
                android:text="2015-08-03"
                android:textColor="#888A8D"
                />
            
        </LinearLayout>
        
        <ImageView 
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:src="@drawable/detail3"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    
</RelativeLayout>