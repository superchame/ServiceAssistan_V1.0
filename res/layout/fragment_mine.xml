<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/fragment_mine_title_tv"
        android:textSize="17sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:gravity="center"/>
    
	<TableLayout 
	    android:layout_marginTop="40dp"
	     android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       	android:paddingTop="10dp"
       	android:paddingBottom="10dp"
        android:background="@drawable/your_item_border"
	    >
	    
	     <!-- 表格布局：第一行 -->  
        <TableRow  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            >  
            <TextView  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_gravity="center_vertical"  
                android:layout_marginLeft="10dp"
                android:text="@string/fragment_mine_name_tv" >  
            </TextView>  
            <TextView 
                android:id="@+id/fragment_mine_name_tv"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=""
                />
        </TableRow>  
        <!-- 表格布局：第二行 -->  
        <TableRow  
            android:layout_width="fill_parent"  
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"  
           	>  
            <TextView  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_gravity="center_vertical"  
                android:layout_marginLeft="10dp"
                android:text="@string/fragment_mine_org_tv" >  
            </TextView>  
            <TextView 
                android:id="@+id/fragment_mine_org_tv"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text=""
                />
            
        </TableRow> 
	</TableLayout>
  	
	<Button  
        android:id="@+id/fragment_mine_btn"  
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:background="@drawable/your_button_border"
        android:textColor="#df5c5c"
        android:text="@string/fragment_mine_btn" />  

</LinearLayout>